#!/bin/sh

clock=$(date '+%I')

case "$clock" in
	"00") icon="ó°¥” " ;;
	"01") icon="ó°¥” " ;;
	"02") icon="ó°¥” " ;;
	"03") icon="ó°¥” " ;;
	"04") icon="ó°¥” " ;;
	"05") icon="ó°¥” " ;;
	"06") icon="ó°¥” " ;;
	"07") icon="ó°¥” " ;;
	"08") icon="ó°¥” " ;;
	"09") icon="ó°¥” " ;;
	"10") icon="ó°¥” " ;;
	"11") icon="ó°¥” " ;;
	"12") icon="ó°¥” " ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(cal)" && notify-send "Appointments" "$(calcurse -d3)" ;;
	2) setsid -f "$TERMINAL" -e calcurse ;;
	3) notify-send "ðŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%Y %b %d (%a) $icon%I:%M%p"
